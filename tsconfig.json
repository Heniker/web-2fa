{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["DOM", "ESNext", "ES6", "DOM.Iterable"],
    "downlevelIteration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/vuetify/types", "shims"],
    "baseUrl": "."
  },
  "include": ["src", "shims"],
  "typeAcquisition": { "enable": true }
}
